/* pages/album/index.wxss */
.topInfo {
  position: relative;

}

.topInfo .mask{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 225px;
  background-image: -webkit-linear-gradient(top,transparent,currentColor 80%);
}

.topInfo .bg_img{
  width: 100%;
  height: 375px;
  display: block;
}

.topInfo .top {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 0 15px 25px;
  color: #fff;
  font-size: 14px;
}
.topInfo .top .albumTitle {
  font-size: 24px;
}

.song-wrap {
  color: #fff;
  padding: 0 10px;
}
.song-wrap .index {
  margin-right: 10px;
  width: 30px;
  text-align: center;
  font-size: 17px;
  margin-top: -10px;
}
.song-wrap .songname {
  font-size: 18px;
}
.flex-content {
  overflow: hidden;
  border-bottom: 1px solid hsla(0,0%,100%,.15);
  padding: 7px 0;
}
.song-wrap .songExt {
  font-size: 14px;
  color: hsla(0,0%,100%,.6);
}
.song-wrap .title {
  color: #fff;
}
.song-wrap .extInfo {
  font-size: 14px;
}

