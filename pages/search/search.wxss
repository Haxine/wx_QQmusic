/* pages/search/search.wxss */
page {
  height: 100%;
}
.input-wrap {
  width: 100%;
  padding: 10px;
  box-sizing:border-box;
  background-color: #f4f4f4;
}

.input-wrap .input-outer {
  display: flex;
}
.input-wrap .input-outer text {
  line-height: 36px;
  font-size: 14px;
  padding: 0 8px;
  margin-right: -8px;
}
.input-wrap .input-inner {
  background-color: #fff;
  display: flex;
  flex: 1;
  height: 24px;
  padding: 6px;
}
.input-wrap icon {
  height: 20px;
  margin-top: 2px;
}
.input-wrap input {
  margin: 0 8px;
  background-color: #fff;
  height: 24px;
  min-height: 24px;
  display: inline-block;
  flex: 1;
  font-size: 14px;
}

.hot-search {
  padding: 15px;
  font-size: 13px;
}
.hot-search .subtitle {
  font-size: 15px;
  color: rgba(0, 0, 0, .6);
}
.hot-search .hot-key {
  border: 1px solid #333;
  padding: 0 10px;
  border-radius: 14px;
  margin: 10px 10px 0 0;
  line-height: 28px;
  height: 28px;
  display: inline-block;
}
.hot-search .special {
  border-color: #f30;
  color: #f30;
}

.outer {
  position: relative;
  height: calc(100% - 56px);
}
.outer .searchResult {
  position: absolute;
  width: 100%;
  top: 0;
  bottom: 0;
  background-color: #fff;
}
.outer .searchResult .icon {
  width: 36px;
  height: 36px;
  background-color: #333;
  margin-right: 10px;
  box-shadow: 0 0 8px #aaa;
  overflow: hidden;
}
.outer .searchResult .round {
  border-radius: 50%;
}
.outer .searchResult .icon image {
  width: 100%;
  height: 100%;
}
.searchResult .flexBox {
  padding: 7px 10px;
  border-bottom: 1px solid #e3e3e3;
}
.searchResult .flexBox .flex{
  overflow: hidden;
}
.searchResult .main-title {
  font-size: 16px;
  color: #333;
}
.searchResult .sub-title {
  font-size: 12px;
  color: #808080;
}

.searchResult .finish {
  text-align: center;
  font-size: 12px;
  height: 40px;
  line-height: 40px;
  color: #808080;
}