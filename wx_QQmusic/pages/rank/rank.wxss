/* pages/rank/rank.wxss */
page {
  background-color: #f4f4f4;
}
.album {
  margin: 10px;
  background-color: #fff;
}
.album-img {
  width: 100px;
  height: 100px;
  position: relative;
}

.album-img .listenCount{
  position: absolute;
  left: 12px;
  bottom: 4px;
  color: #fff;
  font-size: 13px;
}

.album-img image {
  width: 100%;
  height: 100%;
}
.album-content {
  flex: 1;
  padding: 0 10px;
  overflow: hidden;
  line-height: 1.5;
  font-size: 16px;
}

.album-content .songList {
  font-size: 14px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-top: 3px;
}